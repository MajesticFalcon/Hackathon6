{% extends 'base.html.twig' %}
{% block css %}
<link rel="stylesheet" href="/dist/css/signin.css" />
{% endblock %}

{% block content %}
<div class="container">
    <div class="starter-template">
        <p class="lead">Search available resources for utility & rent assistance in the St. Louis region.</p>
    </div>

    <form class="form-signin" method="post" action="/">
        {% if error %}
        <div class="alert alert-danger">
            {{ error }}
        </div>
        {% endif %}
        <h2 class="form-signin-heading">Log in for access.</h2>
        <label for="inputEmail" class="sr-only">Email address</label>
        <input name="username" id="inputEmail" class="form-control" placeholder="Email address" autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
		<!-- I removed the required fields !-->
        <input name="password" type="password" id="inputPassword" class="form-control" placeholder="Password">
        <!-- This is beyond our current scope !-->
        <!-- <a href="/forgot.html">Forgot Password?</a> !-->
        <input type="submit" name="Action" value="Login" class="btn btn-lg btn-primary btn-block"></input>
        <br />
        <input type="submit" name="Action" value="Register" class="btn btn-lg btn-primary btn-block"></input>
	</form>


</div>
<!-- /container -->


