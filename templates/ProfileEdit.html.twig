{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">

        <form method="post">

            <div class="form-group">
                <label for="orgName">Organization Name</label>
                <input name="name" value="{{ profile.name }}" type="text" class="form-control" id="orgName"
                       aria-describedby="organizationName" placeholder="Enter Organization Name">
            </div>

            <div class="row">
                <div class="form-group col-sm-6">
                    <label for="orgName">Organization Phone Number</label>
                    <input name="phone" value="{{ profile.phone }}" type="text" class="form-control" id="orgName"
                           aria-describedby="organizationName" placeholder="Enter Organization Name">
                    <small id="organizationName" class="form-text text-muted">So that other organizations are able to
                        contacting you.
                    </small>
                </div>
                <div class="form-group col-sm-6">
                    <label for="contactName">Contact Person</label>
                    <input name="poc" value="{{ profile.poc }}" type="text" class="form-control" id="contactName"
                           aria-describedby="contactPerson" placeholder="Enter Full Name of Contact Person">
                </div>
            </div>

            <div class="form-group">
                <label for="orgStreet">Organization Street Address</label>
                <input name="address" value="{{ profile.address }}" type="text" class="form-control" id="orgName"
                       aria-describedby="organizationName" placeholder="Enter Organization Name">
                <small id="organizationName" class="form-text text-muted">The best phone number for other organizations
                    to use when contacting you.
                </small>
            </div>

            <div class="row">
                <div class="form-group col-sm-6">
                    <label for="orgCity">City</label>
                    <input name="city" value="{{ profile.city }}" type="text" class="form-control" id="orgCity"
                           placeholder="City">
                </div>
                <div class="form-group col-sm-3">
                    <label for="orgState">State</label>
                    <input name="state" value="{{ profile.state }}" type="text" class="form-control" id="orgState"
                           placeholder="State">
                </div>
                <div class="form-group col-sm-3">
                    <label for="orgZip">Zip</label>
                    <input name="zip" value="{{ profile.zip }}" type="text" class="form-control" id="orgZip"
                           placeholder="Zip">
                </div>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" name="optionsRadios" id="cocYes"
                               value="yes" {% if profile.coc != 0 %} checked {% endif %}>
                        Yes, we are part of the Continuum of Care (COC)
                    </label>
                </div>
            </div>


            <br/>
            <input type="submit" name="Action" value="Submit" type="submit" class="btn btn-primary"></input>
        </form>
    </div><!-- /.container -->



    </div>
    <!-- /container -->


    <!-- Bootstrap core JavaScript
    
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="assets/js/ie10-viewport-bug-workaround.js"></script>
    <script src="dist/js/bootstrap.js"></script>
    </body>
{% endblock %}
